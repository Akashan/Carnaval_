{# src/Carnaval/WebsiteBundle/Resources/views/Website/index.html.twig #}
 
{% extends "::layout.html.twig" %}

{% block title %}
  Admin - Modifier un evénement - {{ parent() }}
{% endblock %}

{% block carnaval_contenu %}
    <form class="form-horizontal well" id="formulaire" method="post" name={{ formName }}>
        <fieldset>
            <legend style="color:#fff;">Supprimer l'événement</legend>
            <p>{{ event.name }} - {{ event.lieu }} :<br />{{ event.description|raw|nl2br }}</p>
            <br />
            <input type="submit" class="btn btn-primary" value="Supprimer" />
            <input name="cancel" class="btn" type="submit" value="Cancel" formnovalidate/>
        </fieldset>
    </form>

{% endblock %}