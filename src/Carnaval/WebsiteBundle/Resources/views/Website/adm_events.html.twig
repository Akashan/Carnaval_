{# src/Carnaval/WebsiteBundle/Resources/views/Website/index.html.twig #}
 
{% extends "::layout.html.twig" %}
 
{% block title %}
  Admin - Evénements - {{ parent() }}
{% endblock %}
 
{% block carnaval_contenu %}
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th colspan="3">Evénements</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td style="width:10%">{{ event.eventDate|date('d/M/Y') }}</td>
                <td>{{ event.name }} - {{ event.lieu }}</td>
                <td style="width:20%">
                    <div class="btn-group">
                        <a class="btn btn-warning" href="{{ path('carnaval_website_adm_evenement_modifier', {'id': event.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('carnaval_website_adm_evenement_supprimer', {'id': event.id}) }}">Supprimer</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}